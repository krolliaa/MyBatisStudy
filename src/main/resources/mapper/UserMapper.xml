<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zwm.mapper.UserMapper">
    <resultMap id="userMap" type="com.zwm.pojo.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
    </resultMap>
    <select id="selectUserById" resultType="user">
        select * from user where id = #{id}
    </select>
    <select id="selectAllUsers" resultType="user">
        select * from user
    </select>
    <select id="selectUserByUserName" resultType="user">
        select * from user where 1 = 1
        <if test="myName != null and myName != ''">
            and username = #{myName}
        </if>
    </select>
    <insert id="insertUser">
        insert into user(id, username, password) values(#{id}, #{username}, #{password});
    </insert>
    <select id="selectUserByIdAndPassword" resultType="user">
        select * from user where id = #{arg0} and password = #{arg1}
    </select>
    <select id="selectUserByUsernameAndPassword" resultType="user">
        select * from user where username = #{myName} and password = #{myPassword}
    </select>
</mapper>